<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="viewModel"
                type="com.itboye.cardmanage.ui.login.LoginModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/normal_margin"
            android:background="@color/white"
            tools:context=".ui.login.LoginActivity">

        <ImageView
                android:id="@+id/iv_lg_logo"
                android:background="@mipmap/ic_launcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_1"
                app:layout_constraintTop_toBottomOf="@+id/iv_lg_logo"
                android:text="赶紧登录吧"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_18"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>

        <TextView
                android:id="@+id/tv_2"
                app:layout_constraintTop_toBottomOf="@+id/tv_1"
                android:text="赶紧登录吧"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText"/>

        <LinearLayout
                android:id="@+id/ll_login_data"
                android:layout_marginTop="@dimen/normal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/line_gray_d8d8d8"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="手机号"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_mobile"/>

                <EditText
                        android:text="请输入手机号"
                        android:layout_toRightOf="@+id/tv_mobile"
                        android:layout_width="match_parent"
                        android:hint="@color/hint_color_a3a3a3"
                        android:textColor="@color/hint_color_a3a3a3"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_mobile"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="验证码"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_code"/>

                <EditText
                        android:text="请输入验证码"
                        android:layout_toRightOf="@+id/tv_code"
                        android:layout_width="match_parent"
                        android:hint="@color/hint_color_a3a3a3"
                        android:textColor="@color/hint_color_a3a3a3"
                        android:layout_height="wrap_content"
                        android:id="@+id/et_code"/>

                <TextView
                        android:text="获取验证码"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_get_code"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
                android:text="密码登录"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_login_data"
                android:id="@+id/tv_login_by_password"/>

    </android.support.constraint.ConstraintLayout>
</layout>