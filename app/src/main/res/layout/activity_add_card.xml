<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="viewModel"
                type="com.itboye.cardmanage.ui.home.AddCardModel"/>
    </data>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            tools:context=".ui.home.AddCardActivity">

        <com.itboye.cardmanage.widget.CommonTitleBar
                app:title_text="添加卡"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/view_bg_white_grey_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="持卡人姓名"
                    android:textSize="14sp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="姓名"
                    android:text="@={viewModel.cardOwner}"
                    android:textSize="@dimen/dp_12"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/view_bg_white_grey_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="身份证号码"
                    android:textSize="14sp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="身份证号码"
                    android:text="@={viewModel.idnumber}"
                    android:textSize="@dimen/dp_12"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/view_bg_white_grey_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="银行卡卡号"
                    android:textSize="14sp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入银行卡卡号"
                    android:text="@={viewModel.cardNumber}"
                    android:textSize="@dimen/dp_12"
                    android:layout_toRightOf="@+id/tv_3"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_scan"
                    android:layout_marginRight="@dimen/dp_6"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/view_bg_white_grey_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="确认银行卡卡号"
                    android:textSize="14sp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="确认银行卡卡号"
                    android:text="@={viewModel.cardNumberRe}"
                    android:textSize="@dimen/dp_12"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/view_bg_white_grey_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="开户行名称"
                    android:textSize="14sp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.bankName}"
                    android:textSize="@dimen/dp_12"
                    android:enabled="false"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/view_bg_white_grey_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="支行名称"
                    android:textSize="14sp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:text="@={viewModel.branchBankName}"
                    android:textSize="@dimen/dp_12"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/view_bg_white_grey_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="手机号码"
                    android:textSize="14sp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入银行卡预留手机号"
                    android:text="@={viewModel.reservedPhone}"
                    android:textSize="@dimen/dp_12"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:padding="@dimen/dp_12"
                android:background="@color/gray_f1f1f1"
                android:layout_height="wrap_content">

            <View
                    android:layout_width="match_parent"
                    android:background="@color/line_gray_d8d8d8"
                    android:layout_centerVertical="true"
                    android:layout_height="@dimen/dp_1"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:text="信用卡选填"
                    android:padding="@dimen/dp_6"
                    android:background="@color/gray_f1f1f1"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/view_bg_white_grey_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="身份证号码"
                    android:textSize="14sp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="身份证号码"
                    android:text="@={viewModel.idnumber}"
                    android:textSize="@dimen/dp_12"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@drawable/view_bg_white_grey_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/dp_4"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="身份证号码"
                    android:textSize="14sp"/>

            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="身份证号码"
                    android:text="@={viewModel.idnumber}"
                    android:textSize="@dimen/dp_12"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"/>
        </LinearLayout>

        <com.itboye.cardmanage.widget.MyButton
                android:text="提交"
                android:textColor="@color/white"
                android:padding="@dimen/dp_10"
                android:background="@color/red"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:onClick="@{()->viewModel.submit()}"
                android:layout_margin="@dimen/dp_32"
                app:corner="@dimen/dp_6"
                app:pressBgc="@color/orange"/>
    </LinearLayout>

</layout>