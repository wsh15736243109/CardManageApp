<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="item"
                type="String"/>
    </data>


    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12">

        <com.itboye.cardmanage.widget.roundImage.SWImageView
                android:id="@+id/iv_bank_bg"
                android:layout_width="match_parent"
                app:type="round"
                android:background="@color/red"
                android:src="@drawable/bank"
                android:layout_height="150dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="中国银行"
                android:drawablePadding="@dimen/dp_6"
                app:layout_constraintTop_toTopOf="@+id/iv_bank_bg"
                android:drawableLeft="@drawable/ic_verified"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="@dimen/dp_12"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:text="截至2019-12-31"
                app:layout_constraintTop_toTopOf="@+id/iv_bank_bg"
                android:background="@drawable/shape_strok_radius_0"
                android:drawablePadding="@dimen/dp_6"
                app:layout_constraintRight_toRightOf="@+id/iv_bank_bg"
                android:drawableLeft="@drawable/ic_verified"
                android:layout_margin="@dimen/dp_12"
                android:padding="@dimen/dp_6"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首笔优惠，自由分期"
                android:padding="@dimen/dp_6"
                app:layout_constraintBottom_toBottomOf="@+id/iv_bank_bg"
                android:background="@color/blue_A6C0F2"
                />
    </android.support.constraint.ConstraintLayout>
</layout>
