<?xml version="1.0" encoding="utf-8"?>
<layout>


    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_margin="@dimen/dp_12"
            android:padding="@dimen/dp_12">


        <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:text="中国银行"
                android:drawablePadding="@dimen/dp_6"
                app:layout_constraintTop_toTopOf="@+id/iv_bank_bg"
                android:drawableLeft="@drawable/ic_verified"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_change_pre_card"
                android:layout_width="wrap_content"
                android:text="更换预存卡 "
                android:background="@drawable/rounded_rect_red"
                app:layout_constraintRight_toRightOf="parent"
                android:padding="@dimen/dp_6"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/tv_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            <TextView
                    android:id="@+id/tv_repaid_yue"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_12"
                    android:layout_height="wrap_content"
                    android:text="账户余额："
                    />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</layout>
