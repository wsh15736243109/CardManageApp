<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_12"
            android:layout_margin="@dimen/dp_12">

        <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:text="中国银行"
                android:drawablePadding="@dimen/dp_6"
                app:layout_constraintTop_toTopOf="@+id/iv_bank_bg"
                android:drawableLeft="@drawable/ic_verified"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="16dp"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_remain_days"
                android:layout_width="wrap_content"
                android:text="剩余12天"
                android:background="@drawable/shape_strok_red_radius_0"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="11dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:textColor="@color/red"
                android:layout_height="wrap_content"/>

        <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/tv_bank_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_24"
                android:paddingBottom="@dimen/dp_24"
                >

            <TextView
                    android:id="@+id/tv_repayment_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="还款时间"
                    />

            <TextView
                    android:id="@+id/tv_repaid_amount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="已还金额"
                    />

            <TextView
                    android:id="@+id/tv_bill_amount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="账单日"
                    />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
