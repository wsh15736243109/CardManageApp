<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bank_nongye"
        android:id="@+id/cl_root"
        android:layout_margin="@dimen/dp_12"
        android:padding="@dimen/dp_12">

    <ImageView
            android:id="@+id/iv_card_manage_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"/>

    <TextView
            android:id="@+id/tv_card_manage_bank"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/item_card_manage_daikou"
            android:layout_toRightOf="@+id/iv_card_manage_icon"
            android:textSize="14dp"
            android:text="123"
            android:layout_marginLeft="@dimen/dp_6"
            android:singleLine="true"
            android:textColor="@color/white"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_card_manage_type"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="信用卡"
            android:layout_marginTop="@dimen/dp_6"
            android:textSize="11dp"
            android:layout_alignLeft="@+id/tv_card_manage_bank"
            android:layout_alignBottom="@+id/iv_card_manage_icon"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_card_manage_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            android:layout_alignLeft="@+id/tv_card_manage_bank"
            android:padding="@dimen/dp_6"
            android:layout_below="@+id/tv_card_manage_type"
            />


    <TextView
            android:id="@+id/item_card_manage_daikou"
            android:background="@color/white"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toLeftOf="@+id/item_card_manage_daifu"
            android:layout_marginRight="@dimen/dp_6"
            android:text="开通代扣"
            android:padding="@dimen/dp_6"
            android:textSize="@dimen/dp_12"
            />

    <TextView
            android:id="@+id/item_card_manage_daifu"
            android:background="@color/white"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_toLeftOf="@+id/item_card_manage_master"
            android:text="开通代付"
            android:padding="@dimen/dp_6"
            android:textSize="@dimen/dp_12"
            />

    <TextView
            android:id="@+id/item_card_manage_master"
            android:background="@color/white"
            android:layout_width="60dp"
            android:textColor="@color/red"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_alignParentRight="true"
            android:text="设为主卡"
            android:padding="@dimen/dp_6"
            android:textSize="@dimen/dp_12"
            />
</RelativeLayout>
