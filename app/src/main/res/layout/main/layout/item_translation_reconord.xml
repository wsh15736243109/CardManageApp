<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="item"
                type="com.itboye.cardmanage.model.LoanModel"/>

        <variable
                name="listener"
                type="com.itboye.cardmanage.interfaces.OnMyItemClickListener"/>
    </data>


    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="@{()->listener.onItemClick(6,item)}"
            android:padding="@dimen/dp_12">

        <ImageView
                android:id="@+id/iv_translation_icon"
                android:layout_width="54dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="54dp"/>

        <TextView
                android:id="@+id/tv_translation_title"
                android:layout_width="wrap_content"
                android:text=""
                app:layout_constraintTop_toTopOf="@+id/iv_translation_icon"
                app:layout_constraintLeft_toRightOf="@+id/iv_translation_icon"
                android:layout_marginLeft="@dimen/dp_6"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_translation_date"
                android:layout_width="wrap_content"
                android:text=""
                app:layout_constraintTop_toBottomOf="@+id/tv_translation_title"
                app:layout_constraintBottom_toBottomOf="@+id/iv_translation_icon"
                app:layout_constraintLeft_toLeftOf="@+id/tv_translation_title"
                android:textSize="12dp"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_height="wrap_content"/>


        <TextView
                android:id="@+id/tv_translation_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:text=""
                android:padding="@dimen/dp_6"
                android:textColor="@color/green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

    </android.support.constraint.ConstraintLayout>
</layout>
