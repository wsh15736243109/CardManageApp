<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/cl_root"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12">

    <com.itboye.cardmanage.widget.roundImage.SWImageView
            android:id="@+id/iv_bank_bg"
            android:layout_width="match_parent"
            app:type="round"
            android:background="@color/blue_3f61e5"
            android:layout_height="150dp"/>

    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:text="中国银行"
            android:drawablePadding="@dimen/dp_6"
            app:layout_constraintTop_toTopOf="@+id/iv_bank_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            android:drawableLeft="@drawable/ic_checked"
            android:layout_margin="@dimen/dp_12"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_width="wrap_content"
            android:text="12345454545415315"
            android:id="@+id/tv_card_no"
            android:drawablePadding="@dimen/dp_6"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="@dimen/dp_12"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="@dimen/dp_12"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/tv_check_status"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/iv_bank_bg"
            android:background="@drawable/ic_uncheck"
            android:drawablePadding="@dimen/dp_6"
            app:layout_constraintRight_toRightOf="@+id/iv_bank_bg"
            android:drawableLeft="@drawable/ic_verified"
            android:layout_margin="@dimen/dp_12"
            android:padding="@dimen/dp_6"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>
